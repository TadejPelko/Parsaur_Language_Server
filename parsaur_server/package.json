{
	"name": "parsaurlanguageserver",
	"displayName": "Parsaur Language Server",
	"description": "Language server for Parsaur",
	"author": "Timen Stepisnik Perdih",
	"version": "1.3.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/Timen-Stepisnik-Perdih/Parsaur_Language_Server"
	},
	"icon": "parsaur.ico",
	"publisher": "parsaur",
	"categories": [
		"Programming Languages"
	],
	"keywords": [],
	"engines": {
		"vscode": "^1.74.0"
	},
	"activationEvents": [
		"onLanguage:prs",
		"onLanguage:Parsaur",
		"onView:nodeDependencies",
		"onView:ftpExplorer",
		"onView:fileExplorer"
	],
	"main": "./client/out/extension",
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "Example configuration",
			"properties": {
				"ParsaurLanguageServer.maxNumberOfProblems": {
					"scope": "resource",
					"type": "number",
					"default": 100,
					"description": "Controls the maximum number of problems produced by the server."
				},
				"ParsaurLanguageServer.trace.server": {
					"scope": "window",
					"type": "string",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"default": "verbose",
					"description": "Traces the communication between VS Code and the language server."
				}
			}
		},
		"viewsContainers": {
			"activitybar": [
				{
					"id": "structure-explorer",
					"title": "Structure Explorer",
					"icon": "media/dep.svg"
				}
			]
		},
		"views": {
			"structure-explorer": [
				{
					"id": "nodeDependencies",
					"name": "Structure Nodes",
					"icon": "media/dep.svg",
					"contextualTitle": "Structure Explorer"
				}
			],
			"explorer": [
				{
					"id": "jsonOutline",
					"name": "Json Outline",
					"when": "jsonOutlineEnabled"
				}
			]
		},
		"commands": [
			{
				"command": "nodeDependencies.copyEntry",
				"title": "Copy"
			},
			{
				"command": "nodeDependencies.openDefinition",
				"title": "Open Definition"
			},
			{
				"command": "nodeDependencies.searchEntry",
				"title": "Search",
				"icon": {
					"light": "resources/light/icons8-search.svg",
					"dark": "resources/dark/search.png"
				}
			},
			{
				"command": "nodeDependencies.updateDefinition",
				"title": "Update Definition"
			  }
		],
		"menus": {
			"editor/context": [
				{
				  "when": "editorTextFocus",
				  "command": "nodeDependencies.updateDefinition",
				  "group": "navigation"
				}
			],
			"view/item/context": [
				{
					"command": "nodeDependencies.copyEntry",
					"when": "view == nodeDependencies && viewItem == dependency"
				},
				{
					"command": "nodeDependencies.openDefinition",
					"when": "view == nodeDependencies && viewItem == dependency"
				}
			],
			"view/title": [
				{
					"command": "nodeDependencies.searchEntry",
					"when": "view == nodeDependencies",
					"group": "navigation"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"lint": "eslint ./client/src ./server/src --ext .ts,.tsx",
		"postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
		"test": "sh ./scripts/e2e.sh"
	},
	"devDependencies": {
		"@types/glob": "^8.0.0",
		"@types/mocha": "^10.0.1",
		"@types/node": "16.x",
		"@types/vscode": "^1.74.0",
		"@typescript-eslint/eslint-plugin": "^5.45.0",
		"@typescript-eslint/parser": "^5.45.0",
		"@vscode/test-electron": "^2.2.0",
		"eslint": "^8.28.0",
		"glob": "^8.0.3",
		"mocha": "^10.1.0",
		"typescript": "^4.9.5"
	}
}
